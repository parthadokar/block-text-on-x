{
  "manifest_version": 3,
  "name": "X Word Blocker",
  "version": "1.0.0",
  "description": "Block posts on X that contain specific words or @mentions.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
