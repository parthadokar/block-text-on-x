{
  "manifest_version": 3,
  "name": "X Keyword Post Blocker",
  "version": "1.0",
  "description": "Hides or blurs posts on X that contain blocked keywords",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
